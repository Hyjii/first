{{>layout/header}}

<h1>쇼핑몰 웹서비스</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">제품 등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제품이름</th>
            <th>가격</th>
            <th>제품번호</th>
            <th>재고</th>
            <th>카테고리</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{product_name}}</a></td>
                <td>{{price}}</td>
                <td>{{product_number}}</td>
                <td>{{stock}}</td>
                <td>{{category}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}